package assignment_2;

public class Triangle_Number_Pattern {

	public static void main(String[] args) {
		int i,j,k,s,n=5;
		for(i=1;i<=n;i++){
			for(s=1;s<=n-i;s++){
				System.out.print(" ");
			}
			k=i;
			for(j=1;j<=i;j++){
				System.out.print(k++);
			}
			k=k-2;
			for(j=1;j<i;j++){
				System.out.print(k--);
			}
			System.out.println();
		}
		
	}

}
